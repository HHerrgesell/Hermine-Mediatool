# ============================================================================
# Hermine API Configuration
# ============================================================================
HERMINE_BASE_URL=https://hermine.example.com
HERMINE_USERNAME=your_username
HERMINE_PASSWORD=your_password
HERMINE_TIMEOUT=30
HERMINE_VERIFY_SSL=true

# ============================================================================
# Download Configuration
# ============================================================================

# Zielkanäle (komma-separiert, nutze 'list-channels' Command)
TARGET_CHANNELS=channel_id_1,channel_id_2,channel_id_3

# Speicher-Verzeichnis
DOWNLOAD_DIR=./downloads

# Pfad-Template für Dateiorganisation (siehe 'show-template-help')
# Default: {year}/{month:02d}/{sender}_{filename}
PATH_TEMPLATE={year}/{month:02d}/{sender}_{filename}

# Download-Parameter
MAX_CONCURRENT_DOWNLOADS=5
CHUNK_SIZE=8388608
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0
DOWNLOAD_TIMEOUT=60

# Datei-Filterung (erlaubte MIME-Types, komma-separiert)
# Leer = alle Medientypen
ALLOWED_MIMETYPES=

# Größenlimit in MB (0 = kein Limit)
MAX_FILE_SIZE_MB=5000

# ============================================================================
# Nextcloud Integration (optional)
# ============================================================================
NEXTCLOUD_ENABLED=false
NEXTCLOUD_URL=https://nextcloud.example.com
NEXTCLOUD_USERNAME=your_username
NEXTCLOUD_PASSWORD=your_password
NEXTCLOUD_REMOTE_PATH=/Hermine-Media/
NEXTCLOUD_AUTO_UPLOAD=false
DELETE_LOCAL_AFTER_UPLOAD=false

# ============================================================================
# Storage Organization
# ============================================================================
ORGANIZE_BY_CHANNEL=true
ORGANIZE_BY_DATE=true
ORGANIZE_BY_SENDER=true
CREATE_MANIFEST=true

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=hermine_downloader.log
LOG_CONSOLE=true

# ============================================================================
# Features
# ============================================================================
CALCULATE_CHECKSUMS=true
EXTRACT_METADATA=true
GENERATE_THUMBNAILS=false
